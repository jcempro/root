{
	"name": "jcem.pro.root",
	"version": "1.0.0",
	"description": "Automação de minificação HTML e utilitários do projeto jcem.pro.root",
	"homepage": "https://github.com/jcempro/root#readme",
	"bugs": {
		"url": "https://github.com/jcempro/root/issues"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/jcempro/root.git"
	},
	"license": "ISC",
	"author": "Jean Carlo E. M.",
	"type": "module",
	"scripts": {
		"minify": "node .minify.html.js",
		"watch": "npm-watch",
		"dev": "npm run minify && npm run watch",
		"repetidoras": "node ./radio/assets/js/repetidoras/index.main.cjs",
		"gerar-sumario": "node ./radio/.gerar_sumario.js"
	},
	"watch": {
		"minify": {
			"patterns": [
				"**/*.main.html"
			],
			"extensions": "html",
			"quiet": false
		},
		"gerar-sumario": {}
	},
	"devDependencies": {
		"clean-css": "^5.3.3",
		"html-minifier-terser": "^7.2.0",
		"npm-watch": "^0.13.0",
		"terser": "^5.44.1"
	},
	"files": [
		".minify.html.js"
	]
}
